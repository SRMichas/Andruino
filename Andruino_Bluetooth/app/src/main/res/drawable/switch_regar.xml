<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <solid android:color="#979797"/>
                </shape>
            </item>
            <item
                android:bottom="2dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp">
                <shape android:shape="oval">
                    <solid android:color="@color/test2"/>
                </shape>
            </item>
            <item
                android:drawable="@drawable/ic_regar">
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <solid android:color="#979797"/>
                    <size android:width="60dp" android:height="60dp"/>
                </shape>
            </item>
            <item
                android:bottom="2dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp">
                <shape android:shape="oval">
                    <solid android:color="@color/test1"/>
                    <size android:width="60dp" android:height="60dp"/>
                </shape>
            </item>
            <item
                android:width="40dp"
                android:height="40dp"
                android:gravity="center"
                android:drawable="@drawable/ic_regar">
            </item>
        </layer-list>
    </item>
</selector>